<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/iv_card_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@null" /-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_card_category"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@color/black"
            fresco:failureImage="@drawable/error_img"
            fresco:retryImage="@drawable/retry_img"
            />



        <!--TextView
            android:textColor="@android:color/white"
            android:id="@+id/tv_card_category_description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:padding="4dip"
            android:background="#96000000"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/iv_card_category" /-->

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/iv_card_category"
            android:background="#96000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"/>




    </RelativeLayout>



</android.support.v7.widget.CardView>
