<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ufam.hiddenstories.ProfileManagerActivity"
    tools:showIn="@layout/activity_profile_manager">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <TextView
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:id="@+id/txt_email"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/txtView_email"
                android:layout_alignStart="@+id/txtView_email" />

            <TextView
                android:textColor="@color/colorPrimarytext"
                android:layout_below="@id/txt_email"
                android:id="@+id/txtView_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_marginTop="9dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:id="@+id/txt_username"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:layout_below="@+id/txtView_email"
                android:layout_alignRight="@+id/txt_email"
                android:layout_alignEnd="@+id/txt_email" />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:minHeight="40dp"
                android:id="@+id/txtView_username"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/txt_username"
                android:layout_alignLeft="@+id/txt_username"
                android:layout_alignStart="@+id/txt_username" />

            <TextView
                android:layout_marginTop="5dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:id="@+id/txt_passwd"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:layout_below="@+id/txtView_username"
                android:layout_alignLeft="@+id/txtView_email"
                android:layout_alignStart="@+id/txtView_email" />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:minHeight="40dp"
                android:id="@+id/txtView_passwd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/txt_passwd"
                android:layout_centerHorizontal="true"
                android:password="true"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:id="@+id/txt_passwd2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respita sua Senha"
                android:layout_below="@+id/txtView_passwd"
                android:layout_alignLeft="@+id/txtView_email"
                android:layout_alignStart="@+id/txtView_email" />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/colorPrimarytext"
                android:minHeight="40dp"
                android:id="@+id/txtView_passwd2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/txt_passwd2"
                android:layout_centerHorizontal="true"
                android:password="true"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtView_passwd2"
                android:id="@+id/btn_updateUser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ATUALIZAR DADOS"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_below="@+id/btn_updateUser"
                android:id="@+id/btn_deleteUser"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="EXCLUIR CONTA"
                android:background="@color/md_red_700"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
