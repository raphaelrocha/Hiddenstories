<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ufam.hiddenstories.FormUserActivity"
    android:background="@color/bg_view"
    tools:showIn="@layout/activity_form_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:layout_marginTop="50dp"
                android:id="@+id/edt_user_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Seu nome"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/edt_user_name"
                android:id="@+id/edt_login_user"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Seu e-mail"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/edt_login_user"
                android:id="@+id/edt_login_passwd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Sua senha"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:password="true"
                />

            <EditText
                android:background="@color/bg_edt_txt"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/edt_login_passwd"
                android:id="@+id/edt_login_passwd_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Repita sua senha"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:password="true"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_below="@id/edt_login_passwd_2"
                android:id="@+id/btn_save"
                android:layout_width="249dp"
                android:layout_height="45dp"
                android:text="Salvar"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
